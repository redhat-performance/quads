# This configuration proxypasses our two
# QUADS wsgi servers, one for quads-server and
# general apiv3 requests and the other for quads-web
# for the --ls-available UI

server {
    listen 443;
    ssl on;
    # this must match your generated .pem and .key
    ssl_certificate /etc/pki/tls/certs/quads.example.com.pem;
    ssl_certificate_key /etc/pki/tls/certs/quads.example.com.key;

    location /api/v3 {
        proxy_pass http://localhost:5000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location / {
        proxy_pass http://localhost:5001;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /instack {
        root /var/www/html;
        autoindex on;
        types { application/json json; }
        expires 1d;  # Cache for 1 day
        gzip on;
        gzip_types application/json;
    }

    location /visual {
        root /var/www/html;
        autoindex on;
        gzip on;
        gzip_types text/html;
    }
}
